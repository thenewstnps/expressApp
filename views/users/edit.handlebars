<div class="container">
    <div class="card">
        <div class="card-header">
            添加用户
        </div>
        <div class="card-body">
            <form action="/users/edit/{{idea._id}}?_method=PUT" method="post">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <label for="username">姓名：</label>
                    <input type="text" id="username" name="username" class="form-control" placeholder="姓名" value="{{idea.stu_name}}">
                </div>

                <div class="form-group">
                    <label for="userage">年龄：</label>
                    <input type="text" id="userage" name="userage" class="form-control" placeholder="年龄" value="{{idea.stu_age}}">
                </div>

                <div class="form-group">
                    <label for="usergender">性别：</label>
                    <input type="text" id="usersex" name="usersex" class="form-control" placeholder="性别" value="{{idea.stu_sex}}">
                </div>

                <div class="form-group">
                    <label for="userclass">班级：</label>
                    <input type="text" id="userclass" name="userclass" class="form-control" placeholder="班级" value="{{idea.stu_class}}">
                </div>
                <input type="submit" value="编辑" id="btn" class="btn btn-primary btn-block">
            </form>
        </div>
    </div>
</div>